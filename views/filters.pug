                                li
                                    input(type="checkbox", value="Filter1", id="sub-Filter1")
                                    label(for="sub-Filter1") Boys Hostels
                                li
                                    input(type="checkbox", value="Filter1", id="sub-Filter2")
                                    label(for="sub-Filter2") Girls Hostels
                    li
                        input(type="checkbox", value="Filter1", id="Filter2", class="has-sub-filter")
                        label(for="Filter2") Resturants
                        //fieldset.sub-filter.hidden
                            legend.visually-hidden Filter in Resturants
                            ol
                                li
                                    input(type="checkbox", value="Filter1", id="sub-Filter5")
                                    label(for="sub-Filter5") Fast Food
                                li
                                    input(type="checkbox", value="Filter1", id="sub-Filter6")
