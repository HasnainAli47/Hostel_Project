extends template 

block head_tags
    title Signup
    link(rel="stylesheet", href="/css/SignUp.css")

block content
    .wrapper
      .inner
        .image-holder
          img(src="/img/registration-form-3.jpg", alt="Display Picture")
        form(action="/reset-password", method="post")
          if messages.error
            .flash-message
              | #{messages.error}
              script.
                setTimeout(() => {
                  const flashMessage = document.querySelector('.flash-message');
                  if (flashMessage) {
                    flashMessage.style.display = 'none';
                  }
                }, 5000);
          
          h3 Reset Your Password
          .form-holder
            input(type="text", name="token", placeholder="Password", class="form-control", value=token, required, style="font-size: 15px;", hidden)
            input(type="password", name="password", placeholder="Password", class="form-control", required, style="font-size: 15px;")
          .form-holder
            input(type="password", name="confirmpassword" placeholder="Confirm Your Password", class="form-control", style="font-size: 15px;")
          .form-holder
              input(type="checkbox", id="showPassword")
              span Show Password
          .form-login
            button(type="submit") Reset
            p
              | Remember Password?
              a(href="/SignIn") Login

    script(src="/js/SignUp.js")



